<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Bolt\Boltpay\Helper\Cart">
        <plugin sortOrder="1" name="boltCustomCart" type="Bolt\Custom\Plugin\Helper\CartPlugin"/>
    </type>
    <preference for="Bolt\Boltpay\Helper\Order" type="Bolt\Custom\Helper\Boltpay\Order"/>
    <type name="Bolt\Boltpay\Model\Api\DiscountCodeValidation">
        <plugin sortOrder="1" name="boltCustomDiscountCodeValidation"
                type="Bolt\Custom\Plugin\Model\Api\DiscountCodeValidationPlugin"/>
    </type>
    <type name="Bolt\Boltpay\Model\Api\ShippingMethods">
        <plugin sortOrder="1" name="boltCustomShippingMethods"
                type="Bolt\Custom\Plugin\Model\Api\ShippingMethodsPlugin"/>
    </type>
    <type name="Bolt\Boltpay\Helper\Session">
        <plugin sortOrder="1" name="boltCustomSession" type="Bolt\Custom\Plugin\Helper\SessionPlugin"/>
    </type>
    <type name="Bolt\Boltpay\Helper\Order">
        <plugin sortOrder="1" name="boltCustomOrder" type="Bolt\Custom\Plugin\Helper\OrderPlugin"/>
    </type>
    <type name="Bolt\Boltpay\Helper\Config">
        <plugin sortOrder="1" name="boltCustomConfig" type="Bolt\Custom\Plugin\Helper\ConfigPlugin"/>
    </type>
</config>
