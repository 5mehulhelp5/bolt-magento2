<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="FillCardInfoAndClickPayButtonInPaymentStepInBoltPopupActionGroup">
        <click selector="{{BoltCheckoutSection.checkoutContinueButton}}" stepKey="clickContinueButtonInDeliveryStep"/>
        <fillField stepKey="fillCardNumber" selector="{{BoltCheckoutSection.CardNumber}}" userInput="4111111111111111"/>
        <fillField stepKey="fillExp" selector="{{BoltCheckoutSection.CardExp}}" userInput="0922"/>
        <fillField stepKey="fillCardCvv" selector="{{BoltCheckoutSection.CardCvv}}" userInput="123"/>
        <click selector="{{BoltCheckoutSection.checkoutButton}}" stepKey="checkoutButton"/>
    </actionGroup>
</actionGroups>
