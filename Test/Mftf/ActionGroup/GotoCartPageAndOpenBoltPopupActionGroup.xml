<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="GotoCartPageAndOpenBoltPopupActionGroup">
        <amOnPage url="/checkout/cart/index/" stepKey="redirectToCartPage"/>
        <waitForPageLoad time="60" stepKey="waitForPageLoad"/>
        <click selector="{{BoltCheckoutSection.checkoutButtonInCartPage}}" stepKey="openBoltPopup"/>
    </actionGroup>
</actionGroups>
